{
	//// NOTE: In general, you should override the user's settings, where possible, to ensure consistent
	//// formatting behavior, linting behavior, etc., across all contributors to the project.
	//// However, some settings like the user's preferences (e.g., tab size) should not be overridden.
	"biome.enabled": false, // Explicitly disable Biome integration for users who have Biome installed.
	"editor.codeActionsOnSave": {
		"source.addMissingImports.ts": "explicit", // Consider removing this line to allow users to control adding missing imports themselves, may be intrusive.
		"source.fixAll.eslint": "explicit",
		"source.fixAll.prettier": "explicit",
		"source.fixAll.ts": "explicit",
		"source.sort.json": "explicit"
	},
	"editor.defaultFormatter": "prettier.prettier-vscode",
	"editor.detectIndentation": false,
	"editor.formatOnSave": true, // Consider removing this line to allow users to control format on save themselves.
	"editor.insertSpaces": false,
	// I recommend explicitly enabling ESLint and Prettier integration for clarity.
	// Some users (such as myself) have it globally disabled and prefer to enable it on a per-workspace basis.
	"eslint.enable": true,
	// Note: The below ensures that VSCode uses the workspace version of `node`, e.g.,
	// if you are using a version manager like `nvm` or `volta`, it will use the version specified for the project.
	// Replace this with `node` to use the user's `node` as the runtime for ESLint.
	"eslint.runtime": "bun",
	"files.eol": "\n",
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"npm.packageManager": "bun",
	"prettier.enable": true
}
