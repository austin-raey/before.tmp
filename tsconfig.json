{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"paths": {
			"~/*": ["./app/*"]
		},
		"plugins": [{ "name": "next" }],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext"
	},
	"exclude": ["node_modules"],
	"include": [
		".next/types/**/*.ts",
		"**/*.ts",
		"**/*.tsx",
		"eslint.config.mjs",
		"jest.config.mjs",
		"jest.setup.mjs",
		"next-env.d.ts",
		"next.config.mjs",
		"postcss.config.mjs",
		"prettier.config.mjs",
		"tailwind.config.mjs"
	]
}
